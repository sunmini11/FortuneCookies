<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.egco428.a13285.NewFortuneActivity"
    android:nestedScrollingEnabled="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="New Cookie"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:textColor="#4c8ecd"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/border" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/cookieDisplay"
        android:src="@drawable/closed_cookie"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Result"
        android:id="@+id/resultview"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cookieDisplay"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#a4dae7"
        android:textColorHighlight="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Result: No result"
        android:id="@+id/resultDisplay"
        android:textColor="#4c8ecd"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/resultview"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Date:     "
        android:id="@+id/timestampDisplay"
        android:layout_below="@+id/resultDisplay"
        android:layout_alignStart="@+id/resultDisplay"
        android:gravity="right"
        android:background="#dfdede"
        android:paddingRight="20dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="Shake"
        android:id="@+id/shakeButton"
        android:background="@drawable/circlebutton"
        android:textSize="16dp"
        android:layout_below="@+id/timestampDisplay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#242323" />


</RelativeLayout>
